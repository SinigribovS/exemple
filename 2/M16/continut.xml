   <SECTION ID="textID1" ALIGN="top">
   	  <BLOCK ALIGN="top">
	  	 <BLOCK SIZE="450" ALIGN="left">
			  <PARA ALIGN="justify">
				 <TEXT STYLE="medStyle">Legea conservării energiei mecanice:</TEXT>
				 <TEXT STYLE="normalStyle">Energia mecanică a unui corp asupra căruia acţionează forţe conservative se conservă.</TEXT>
			  </PARA>		
		 
			  <PARA ALIGN="justify">
				 <TEXT STYLE="medStyle">Energia mecanică E</TEXT>
				 <TEXT STYLE="normalStyle">a unui corp este egală cu suma dintre energia cinetică</TEXT>
				 <FTEXT SUBSCRIPT="C" STYLE="medStyle">E</FTEXT>
				 <TEXT STYLE="normalStyle">şi energia potenţială</TEXT>
				 <FTEXT SUBSCRIPT="P" STYLE="medStyle">E</FTEXT>
				 <TEXT STYLE="normalStyle">a corpului considerat:</TEXT>
				 <TEXT STYLE="medStyle">E = </TEXT>
				 <FTEXT SUBSCRIPT="C" STYLE="medStyle">E</FTEXT>
				 <TEXT STYLE="medStyle">+</TEXT>
				 <FTEXT SUBSCRIPT="P" STYLE="medStyle">E</FTEXT>
			  </PARA>	
		 </BLOCK>
		 
		 <BLOCK SIZE="30"/>

	  	 <BLOCK SIZE="450" ALIGN="left">
			  <PARA ALIGN="justify">
				 <TEXT STYLE="medStyle">Energia cinetică</TEXT>
				 <IMG>formula1</IMG>
				 <TEXT STYLE="normalStyle">, unde</TEXT>
				 <TEXT STYLE="medStyle">m</TEXT>
				 <TEXT STYLE="normalStyle">este masa corpului şi</TEXT>
				 <TEXT STYLE="medStyle">v</TEXT>
				 <TEXT STYLE="normalStyle">este viteza acestuia.</TEXT>
			  </PARA>		
			  <PARA ALIGN="justify">
				 <TEXT STYLE="medStyle">Energia potenţială elastică</TEXT>
				 <IMG>formula2</IMG>
				 <TEXT STYLE="normalStyle">, unde</TEXT>
				 <TEXT STYLE="medStyle">k</TEXT>
				 <TEXT STYLE="normalStyle">este constanta elastică a resortului şi</TEXT>
				 <IMG OFFSET="-17">formula3</IMG>
				 <TEXT STYLE="normalStyle">este deformarea resortului.</TEXT>
			  </PARA>		    
		 </BLOCK>
	  </BLOCK>
   </SECTION> 
   
   <SECTION ID="helpID1" ALIGN="top">
      <PARA ALIGN="justify">
         <TEXT STYLE="normalStyle16">Ce viteză va avea bila în urma lovirii?</TEXT>
      </PARA>		
   </SECTION> 
   
   <SECTION ID="helpID2" ALIGN="top">
      <PARA ALIGN="justify">
         <TEXT STYLE="normalStyle16">Se poate determina viteza bilei măsurând deformarea produsă de bilă asupra unui resort orizontal, fixat la un capăt.</TEXT>
      </PARA>		
   </SECTION>    
   
   <SECTION ID="helpID3" ALIGN="top">
      <PARA ALIGN="justify">
         <TEXT STYLE="normalStyle16">În ce relaţie se vor afla energia cinetică a bilei</TEXT>
		 <FTEXT SUBSCRIPT="C" STYLE="medStyle16">E</FTEXT>
		 <TEXT STYLE="normalStyle16">şi energia potenţială maximă</TEXT>
		 <FTEXT SUBSCRIPT="P" STYLE="medStyle16">E</FTEXT>
		 <TEXT STYLE="normalStyle16">a resortului comprimat de bilă, considerând frecările neglijabile?</TEXT>
      </PARA>		
      <PARA ALIGN="justify" TABS="2">
         <FTEXT SUBSCRIPT="C"STYLE="medStyle16">E</FTEXT>
		 <TEXT STYLE="normalStyle16">&gt;</TEXT>
		 <FTEXT SUBSCRIPT="P"STYLE="medStyle16">E</FTEXT>
      </PARA>			  
      <PARA ALIGN="justify" TABS="2">
         <FTEXT SUBSCRIPT="C" STYLE="medStyle16">E</FTEXT>
		 <TEXT STYLE="normalStyle16">&lt;</TEXT>
		 <FTEXT SUBSCRIPT="P" STYLE="medStyle16">E</FTEXT>
      </PARA>			
      <PARA ALIGN="justify" TABS="2">
         <FTEXT SUBSCRIPT="C" STYLE="medStyle16">E</FTEXT>
		 <TEXT STYLE="normalStyle16">=</TEXT>
		 <FTEXT SUBSCRIPT="P" STYLE="medStyle16">E</FTEXT>
      </PARA>	
   </SECTION>       
   <SECTION ID="helpID4" ALIGN="top">
