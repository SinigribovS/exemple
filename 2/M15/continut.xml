   <SECTION ID="textID1" ALIGN="top" SPACING="10">
      <PARA ALIGN="justify">
         <TEXT STYLE="medStyle">Energia mecanică</TEXT>
         <TEXT STYLE="normalStyle">a unui corp este egală cu suma dintre energia cinetică şi energia potenţială a corpului.</TEXT>		 
      </PARA>
	  
      <PARA ALIGN="justify">
         <TEXT STYLE="medStyle">Legea conservării energiei mecanice:</TEXT>
         <TEXT STYLE="normalStyle">Energia mecanică a unui corp aflat în câmpuri de forţe conservative, se conservă.</TEXT>		 
      </PARA>
	  
      <PARA ALIGN="justify">
         <TEXT STYLE="medStyle">Forţa conservativă</TEXT>
         <TEXT STYLE="normalStyle">este forţa pentru care lucrul mecanic nu depinde de drumul parcurs, ci doar de poziţia iniţială şi de poziţia finală a corpului considerat.</TEXT>
         <TEXT STYLE="medStyle">Exemple de forţe conservative:</TEXT>
         <TEXT STYLE="normalStyle">forţa gravitaţională, forţa elastică</TEXT>		 
      </PARA>
	  
      <PARA ALIGN="justify">
         <TEXT STYLE="medStyle">Exemple de forţe neconservative:</TEXT>
         <TEXT STYLE="normalStyle">forţe de frecare</TEXT>		 
      </PARA>
   </SECTION>
