		 <TEXT STYLE="medStyle">Forţele neconservative</TEXT>
		 <TEXT STYLE="normalStyle">sunt forţele pentru care lucrul mecanic depinde de drumul parcurs.</TEXT>
     </PARA>	
     <PARA ALIGN="justify">
		 <TEXT STYLE="medStyle">Forţe neconservative:</TEXT>
		 <TEXT STYLE="normalStyle">forţa de frecare şi forţa de tracţiune.</TEXT>
     </PARA>	
     <PARA ALIGN="justify">
		 <TEXT STYLE="medStyle">Energia mecanică E</TEXT>
		 <TEXT STYLE="normalStyle">este egală cu suma dintre energia cinetică</TEXT>
		 <FTEXT STYLE="medStyle" SUBSCRIPT="c">E</FTEXT>
		 <TEXT STYLE="normalStyle">şi energia potenţială</TEXT>
		 <FTEXT STYLE="medStyle" SUBSCRIPT="p">E</FTEXT>
		 <TEXT STYLE="medStyle">: E=</TEXT>
		 <FTEXT STYLE="medStyle" SUBSCRIPT="c">E</FTEXT>
		 <TEXT STYLE="medStyle">+</TEXT>
		 <FTEXT STYLE="medStyle" SUBSCRIPT="p">E</FTEXT>
     </PARA>		   
