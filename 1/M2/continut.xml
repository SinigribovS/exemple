   <SECTION ID="textID1" ALIGN="top" SPACING="10">
      <PARA ALIGN="justify">
         <TEXT STYLE="boldStyle">Definiţii:</TEXT>
      </PARA>
	  
      <PARA ALIGN="justify" TABS="2" BULLET=":1)" BULLETSTYLE="medStyle">
         <TEXT STYLE="medStyle">Lucrul mecanic L</TEXT>
         <TEXT STYLE="normalStyle">, efectuat de o forţă constantă, este mărimea fizică scalară egală cu produsul dintre</TEXT>		 
         <TEXT STYLE="medStyle">forţa F</TEXT>		 
         <TEXT STYLE="normalStyle">ce acţionează asupra unui corp şi</TEXT>		 		 
         <TEXT STYLE="medStyle">deplasarea d</TEXT>		 		 
         <TEXT STYLE="normalStyle">a acestui corp, pe direcţia şi în sensul forţei:</TEXT>		 		 		 
      </PARA>
	  
      <PARA ALIGN="center" TABS="2">
         <TEXT STYLE="medStyle">L = F · d</TEXT>
      </PARA>	  
	  
      <PARA ALIGN="justify" TABS="2">
         <TEXT STYLE="normalStyle">dacă vectorii</TEXT>
		 <IMG OFFSET="-6">vect_f</IMG>
         <TEXT STYLE="normalStyle">şi</TEXT>
		 <IMG OFFSET="-6">vect_d</IMG>		
         <TEXT STYLE="normalStyle">au direcţiile paralele şi sunt de acelaşi sens.</TEXT>		  
      </PARA>	  
	  
	  <BLOCK SIZE="10"/>
	  
      <PARA ALIGN="justify" TABS="2" BULLET=":2)" BULLETSTYLE="medStyle">
         <TEXT STYLE="medStyle">Lucrul mecanic L</TEXT>
         <TEXT STYLE="normalStyle">, efectuat de o forţă constantă, este mărimea fizică scalară egală cu produsul dintre</TEXT>		 
         <TEXT STYLE="medStyle">forţa F</TEXT>		 
         <TEXT STYLE="normalStyle">ce acţionează asupra unui corp,</TEXT>		 		 
         <TEXT STYLE="medStyle">deplasarea d</TEXT>		 		 
         <TEXT STYLE="normalStyle">a acestui corp şi</TEXT>
         <TEXT STYLE="medStyle">cosinusul unghiului</TEXT>		 
		 <IMG OFFSET="-12">alfa</IMG>
         <TEXT STYLE="normalStyle"> dintre vectorul forţă şi vectorul deplasare:</TEXT>
      </PARA>
	  
      <PARA ALIGN="center" TABS="2">
         <TEXT STYLE="medStyle">L = F · d · cos</TEXT>
		 <IMG OFFSET="-12">alfa</IMG>		 
      </PARA>	  

	  <BLOCK SIZE="10"/>
	  
      <PARA ALIGN="justify">
         <TEXT STYLE="medStyle">Unitatea de măsură:</TEXT>
         <FTEXT STYLE="medStyle" SUBSCRIPT="SI">[ L ]</FTEXT>		 
